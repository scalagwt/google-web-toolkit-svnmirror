<module>
	<inherits name="com.google.gwt.core.Core" />
	<inherits name="com.google.gwt.user.UserAgent" />
	<inherits name="com.google.gwt.i18n.I18N" />

	<!-- All other browsers get the default (rich editing unsupported) -->


	<!-- IE-specific implementation -->
	<replace-with
		class="com.google.gwt.user.client.ui.richtext.RichTextAreaImplIE6">
		<when-type-is
			class="com.google.gwt.user.client.ui.richtext.RichTextAreaImpl" />
		<when-property-is name="user.agent" value="ie6" />
	</replace-with>

	<!-- Mozilla-specific implementation -->
	<replace-with
		class="com.google.gwt.user.client.ui.richtext.RichTextAreaImplMozilla">
		<when-type-is
			class="com.google.gwt.user.client.ui.richtext.RichTextAreaImpl" />
		<any>
			<when-property-is name="user.agent" value="gecko1_8" />
			<when-property-is name="user.agent" value="gecko" />
		</any>
	</replace-with>

	<!-- Safari-specific implementation -->
	<replace-with
		class="com.google.gwt.user.client.ui.richtext.RichTextAreaImplSafari">
		<when-type-is
			class="com.google.gwt.user.client.ui.richtext.RichTextAreaImpl" />
		<any>
			<when-property-is name="user.agent" value="safari" />
		</any>
	</replace-with>


	<!-- RichTextEditor replacement -->

	<!-- IE-specific implementation -->
	<replace-with
		class="com.google.gwt.user.client.ui.richtext.RichTextEditorImplStandard">
		<when-type-is
			class="com.google.gwt.user.client.ui.richtext.RichTextEditorImpl" />
		<when-property-is name="user.agent" value="ie6" />
	</replace-with>

	<!-- Safari-specific implementation -->
	<replace-with
		class="com.google.gwt.user.client.ui.richtext.RichTextEditorImplSafari">
		<when-type-is
			class="com.google.gwt.user.client.ui.richtext.RichTextEditorImpl" />
		<when-property-is name="user.agent" value="safari" />
	</replace-with>

	<!-- Mozilla-specific implementation -->
	<replace-with
		class="com.google.gwt.user.client.ui.richtext.RichTextEditorImplStandard">
		<when-type-is
			class="com.google.gwt.user.client.ui.richtext.RichTextEditorImpl" />
		<any>
			<when-property-is name="user.agent" value="gecko1_8" />
			<when-property-is name="user.agent" value="gecko" />
		</any>
	</replace-with>

</module>
