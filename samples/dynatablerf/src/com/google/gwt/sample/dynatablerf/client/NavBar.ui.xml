<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:dt='urn:import:com.google.gwt.sample.dynatablerf.client'>
  <ui:style>
    .button {
    	width: 3em;
    	text-align: center;
    	vertical-align: middle;
    }
    
    .navbar {
    	background-color: #ECE9D8;
    	vertical-align: middle;
    	border-bottom: 1px solid #ACA899;
    	margin:5px;
    }
    
    .status {
    	vertical-align: middle;
    	padding-right: 10px;
    	text-align: right;
    }
  </ui:style>
  <g:DockLayoutPanel unit="PX" styleName="{style.navbar}">
    <g:east size="40">
      <g:Button ui:field="gotoNext" styleName="{style.button}">&gt;</g:Button>
    </g:east>
    <g:east size="40">
      <g:Button ui:field="gotoPrev" enabled="false" styleName="{style.button}">&lt;
      </g:Button>
    </g:east>
    <g:east size="40">
      <g:Button ui:field="gotoFirst" enabled="false" styleName="{style.button}">&lt;&lt;
      </g:Button>
    </g:east>
    <g:center>
      <g:HTML>
        <div ui:field="status" class="{style.status}">Please wait</div>
      </g:HTML>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>