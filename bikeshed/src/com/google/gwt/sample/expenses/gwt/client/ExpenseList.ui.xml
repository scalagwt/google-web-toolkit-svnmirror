<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:l='urn:import:com.google.gwt.bikeshed.list.client'>

  <ui:with
    field='styles'
    type='com.google.gwt.sample.bikeshed.style.client.Styles.Resources' />

  <ui:image
    field='searchCenter'
    src='../../../bikeshed/style/client/searchCenter.png'
    repeatStyle="Horizontal" />
  <ui:image
    field='searchLeft'
    src='../../../bikeshed/style/client/searchLeft.png' />

  <ui:image
    field='cornerTopRight' />
  <ui:image
    field='cornerTopLeft' />
  <ui:image
    field='cornerBottomRight' />
  <ui:image
    field='cornerBottomLeft' />

  <ui:style>
    .top {
      padding-top: 15px;
    }
    
    .breadcrumb {
      padding-left: 5px;
      color: #4b4a4a;
      font-size: 130%;
      font-weight: bold;
    }
    
    .textBox {
      width: 250px;
      border: 0px;
      padding: 0px;
      height: 14px;
      font-size: 12px;
      outline-width: 0px;
    }
    
    .searchButton {
      cursor: pointer;
      cursor: hand;
    }
    
    @sprite .searchCenter {
      gwt-image: 'searchCenter';
      padding-top: 4px;
    }
    
    @sprite .searchLeft {
      gwt-image: 'searchLeft';
    }
    
    .corner {
      height: 4px;
      width: 4px;
    }
    
    @sprite .cornerTopRight {
      gwt-image: 'cornerTopRight';
    }
    
    @sprite .cornerTopLeft {
      gwt-image: 'cornerTopLeft';
    }
    
    @sprite .cornerBottomRight {
      gwt-image: 'cornerBottomRight';
    }
    
    @sprite .cornerBottomLeft {
      gwt-image: 'cornerBottomLeft';
    }
    
    .tableControlsBackground {
      background: #d7dde8;
    }
    
    .tableControlsBorderInner {
      height: 1px;
      width: 1px;
      overflow: hidden;
    }
    
    .center {
      border-bottom: 1px solid #d7dde8;
    }
    
    .table {
      border: 0px;
    }
  </ui:style>

  <g:DockLayoutPanel
    unit='PX'>

    <g:north
      size='70'>
      <g:HTMLPanel
        styleName='{style.top}'>
        <table
          align='center'
          width='98%'
          cellspacing='0'
          cellpadding='0'>
          <!-- Top of 9 box. -->
          <tr>
            <td
              class='{style.corner}'>
              <div
                class='{style.cornerTopLeft}' />
            </td>
            <td
              colspan='2'
              class='{style.tableControlsBackground}'>
              <div
                class='{style.tableControlsBorderInner}' />
            </td>
            <td
              class='{style.corner}'>
              <div
                class='{style.cornerTopRight}' />
            </td>
          </tr>
          <tr>
            <!-- Left of 9 box. -->
            <td
              class='{style.tableControlsBackground}'>
              <div
                class='{style.tableControlsBorderInner}' />
            </td>
            <!-- Breadcrumb. -->
            <td
              class='{style.breadcrumb} {style.tableControlsBackground}'
              align='left'
              ui:field='breadcrumb'>
              All Reports
            </td>
            <!-- Search Box. -->
            <td
              class='{style.tableControlsBackground}'
              align='right'
              valign='middle'>
              <table
                cellspacing='0'
                cellpadding='0'>
                <tr>
                  <td
                    valign='top'>
                    <div
                      class='{style.searchLeft}' />
                  </td>
                  <td
                    valign='top'
                    class='{style.searchCenter}'>
                    <g:TextBox
                      styleName='{style.textBox}'
                      ui:field='searchBox' />
                  </td>
                  <td
                    valign='top'>
                    <g:Image
                      addStyleNames='{style.searchButton}'
                      ui:field='searchButton'
                      resource='{styles.searchRight}' />
                  </td>
                  <td>
                    <div
                      style='width:50px;' />
                  </td>
                </tr>
              </table>
            </td>
            <!-- Right of 9 box. -->
            <td
              class='{style.tableControlsBackground}'>
              <div
                class='{style.tableControlsBorderInner}' />
            </td>
          </tr>
          <!-- Bottom of 9 box. -->
          <tr>
            <td
              class='{style.corner}'>
              <div
                class='{style.cornerBottomLeft}' />
            </td>
            <td
              colspan='2'
              class='{style.tableControlsBackground}'>
              <div
                class='{style.tableControlsBorderInner}' />
            </td>
            <td
              class='{style.corner}'>
              <div
                class='{style.cornerBottomRight}' />
            </td>
          </tr>
        </table>
      </g:HTMLPanel>
    </g:north>

    <g:center>
      <g:ScrollPanel
        styleName='{style.center}'>
        <l:CellTable
          addStyleNames='{style.table}'
          width='100%'
          ui:field='table' />
      </g:ScrollPanel>
    </g:center>

    <g:south
      size='30'>
      <g:HTMLPanel>
        <div
          style='position:absolute;right:30px;'>
          <l:SimplePager
            ui:field='pager' />
        </div>
      </g:HTMLPanel>
    </g:south>
  </g:DockLayoutPanel>
</ui:UiBinder> 
